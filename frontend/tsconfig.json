{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    //"noImplicitAny": true,
    "module": "commonjs",
    "target": "es2017",
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "allowJs": true,
    "jsx": "react",
    "jsxFactory": "h",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "esnext"
    ]
  }
}
